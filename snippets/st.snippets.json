{
	"PROGRAM …": {
		"prefix": "prog",
		"body": [
			"PROGRAM ${1:PLC_PRG}",
			"\t$0",
			"END_PROGRAM",
			""
		],
		"description": "Define program"
    },
	"IF END_IF...": {
		"prefix": "if",
		"body": [
			"IF ${1:Condition} THEN",
			"\t$0",
			"END_IF;",
			""
		],
		"description": "Define IF condition"
    },
	"IF ELSE END_IF...": {
		"prefix": "if",
		"body": [
			"IF ${1:Condition} THEN",
			"\t$0",
			"ELSE",
			"\t$0",
			"END_IF;",
			""
		],
		"description": "Define IF condition with ELSE"
    },
	"IF ELSIF ELSE END_IF...": {
		"prefix": "if",
		"body": [
			"IF ${1:Condition} THEN",
			"\t$0",
			"ELSIF ${2:Condition2} THEN",
			"\t",
			"ELSE",
			"\t",
			"END_IF;",
			""
		],
		"description": "Define IF condition with ELSIF and ELSE"
    },
	"WHILE …": {
		"prefix": "while",
		"body": [
			"WHILE ${1:Condition} DO",
			"\t$0",
			"END_WHILE;",
			""
		],
		"description": "Define WHILE cycle"
    },
	"REPEAT …": {
		"prefix": "repeat",
		"body": [
			"REPEAT",
			"\t$0",
			"UNTIL ${1:Condition};",
			""
		],
		"description": "Define REPEAT cycle"
    },
	"CASE …": {
		"prefix": "case",
		"body": [
			"CASE ${1:ANY_NUM} OF",
			"\t0: $0",
			"\t1:",
			"\t2:",
			"END_CASE;",
			""
		],
		"description": "Define CASE condition"
    },
	"CASE … ELSE": {
		"prefix": "case",
		"body": [
			"CASE ${1:ANY_NUM} OF",
			"\t0: $0",
			"\t1:",
			"ELSE",
			"\t",
			"END_CASE;",
			""
		],
		"description": "Define CASE condition with ELSE"
    },
	"ACTION …": {
		"prefix": "action",
		"body": [
			"ACTION ${1:Name}:",
			"\t$0",
			"END_ACTION;",
			""
		],
		"description": "Define ACTION"
    },
	"STEP …": {
		"prefix": "step",
